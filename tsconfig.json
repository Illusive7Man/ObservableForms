{
  "compilerOptions": {
    "lib": [ "es5", "es6", "ES2020", "dom", "dom.iterable" ],
    "noImplicitAny": false,
    "noEmitOnError": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,

    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "lib"
  ]
}
